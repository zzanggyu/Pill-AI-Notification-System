<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1DC8BD">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/title" />

    <ImageButton
        android:id="@+id/search_by_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_search_by_name"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Search by name"/>

    <ImageButton
        android:id="@+id/search_by_symptom"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_by_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_search_by_symptom"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="search_by_symptom"/>

    <ImageButton
        android:id="@+id/search_by_camera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_by_symptom"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_search_by_camera"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="search_by_camera"/>

    <RelativeLayout
        android:id="@+id/navigation_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/navigation_bar_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alarm_button"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Alarm"/>

            <Button
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="home_button"/>

            <Button
                android:id="@+id/profile_button"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="profile_button"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/history_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/navigation_bar_container"
        android:layout_margin="13dp"
        android:src="@drawable/ic_history"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="history_button"/>
</RelativeLayout>
